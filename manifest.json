{
  "name": "Paid In Sats",
  "description": "Denominate prices in sats, instead of dollars.",
  "version": "0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "/images/PricedInSatoshis128.png"
    }
  },
  "icons": {
    "128": "/images/PricedInSatoshis128.png"
  },
  "options_page": "options.html"
}